root = true

[*]
charset = "utf-8"
indent_style = space
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_size = 2

[*.css]
indent_size = 4

[*.js]
indent_size = 4

[*.jsx]
indent_size = 4

[*.ts]
indent_size = 4

[*.tsx]
indent_size = 4

[*.json]
indent_size = 4

[*.yml]
indent_size = 2
