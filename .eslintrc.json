{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:solid/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2022
    },
    "plugins": [
        "@typescript-eslint",
        "solid"
    ],
    "env": {
        "browser": true
    },
    "ignorePatterns": [
        "dist",
        "node_modules"
    ],
    "rules": {
        "semi": "error",
        "quotes": ["error", "double"]
    }
}
